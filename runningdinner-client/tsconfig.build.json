{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ES2015"]

  },

  "exclude": [
    "node_modules",
    "dist",
    "packages/**/dist",
    "packages/**/node_modules",
    "packages/**/src/*spec.*"
  ]
}
